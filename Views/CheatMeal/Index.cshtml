@model IEnumerable<CheatMeal>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cheat Meals</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="CheatMeal" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add new Cheat Meal
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Created At</th>
            <th>Cheat Meal</th>
            <th>Amount (g)</th>
            <th>Calories Gained</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">@obj.CreatedDate</td>
                <td width="10%">@obj.Name</td>
                <td width="10%">@obj.Amount</td>
                <td width="10%">@obj.CaloriesGained</td>
                <td width="10%">
                    <div class="btn-group" role="group">
                            <a asp-controller="CheatMeal" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="CheatMeal" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
			</tr>
        }
    </tbody>

</table>
</div>